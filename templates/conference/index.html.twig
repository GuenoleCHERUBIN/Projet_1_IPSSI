{% extends 'base.html.twig' %}

{% block title %}Hello User!{% endblock %}

{% block body %}
    <style>

    .table
    {
        width: auto;
        margin: auto;
    }
    .table-title
    {
        width: 500px;
        height: 30px;
        background-color: darkgrey;
        color: white;
        padding: 2px;
        border: 1px black solid;
        text-align: center;
    }
    .table-row
    {
        text-align: center;
        background-color: white;
        color: black;
        border: 1px black solid;
        padding: 2px;
    }
    .navigation
    {
        margin-left: 49%;
    }

    .pagination
    {
       align-items: center;
    }

        .page
        {
            font-size: 25px;
            color: white;
            text-decoration: none;
        }
        .current
        {
            font-size: 25px;
            color: white;
            text-decoration: none;
        }
    </style>

    <table class="table">
        <tr>
            <th class="table-title">
                Conference Title
            </th>
            <th class="table-title">
                Note
            </th>
            <th class="table-title">
                Creator
            </th>
        </tr>
    {% for conference in conferences %}

        <tr>
            <td class="table-row">
                <a href="/conference/{{ conference.id }}">{{ conference.title }}</a>
            </td>
            <td class="table-row">
              {{ average[conference.id]}}

            </td>
            <td class="table-row">
                {{ conference.creator.firstname }}
            </td>
        </tr>

    {% endfor %}
    </table>
    <div class="navigation">
        {{ knp_pagination_render(conferences) }}
    </div>
{% endblock %}
